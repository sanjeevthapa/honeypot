<!DOCTYPE html>
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"> <!--<![endif]-->
<head>

<!-- Basic Page Needs
================================================== -->
<meta charset="utf-8">
<title><%= content_for?(:title) ? yield(:title) : "Work Scout" %></title>

<!-- Mobile Specific Metas
================================================== -->
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

<!-- CSS
================================================== -->
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'true' %>
<!--[if lt IE 9]>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
<% if @map %>
<script src="http://maps.google.com/maps/api/js?sensor=true"></script>
<% end %>
</head>

<body>
<div id="wrapper">


<!-- Header
================================================== -->
<header class="sticky-header">
<div class="container">
	<div class="sixteen columns">
	
		<!-- Logo -->
		<div id="logo">
			<h1>
			<%= link_to root_url do %>
				<%= image_tag "logo.png", alt: "Work Scout" %>
			<% end %>
			</h1>
		</div>

		<!-- Menu -->
		<nav id="navigation" class="menu">
			<ul id="responsive">

				<li><%= link_to "Home", root_url, id: "current" %></li>

				<li><%= link_to "Jobs", jobs_url %></li>

				<li><%= link_to "Companies", companies_url %></li>

				<li><%= link_to "Blog", blog_url %></li>

				<li><%= link_to "About us", about_url %></li>

				<li><%= link_to "Contact us", contact_url %></li>
			</ul>


			<ul class="float-right" class="menu">
			<% if current_user %>
				<li><%= link_to profile_url do %>
						<%= image_tag "uploads/user.jpg" , class: "img-circle profile-img" %><%= current_user.username %>
					<% end %>
					<ul>
						<li><%= link_to "Profile", profile_url  %></li>
						<li><%= link_to "Settings", settings_url  %></li>
						<li><%= link_to logout_url do %>
								<i class="fa fa-sign-out"></i> Log Out
							<% end %>
						</li>
					</ul>
				</li>
				<% else %>
				<li>
				<%= link_to signup_url do %>
				<i class="fa fa-user"></i> Sign Up
				<% end %>
				</li>
				<li>
				<%= link_to login_url do %>
  				<i class="fa fa-lock"></i> Log In
				<% end %>
				</li>
				<% end %> 
			</ul>

		</nav>

		<!-- Navigation -->
		<div id="mobile-navigation">
			<a href="#menu" class="menu-trigger"><i class="fa fa-reorder"></i> Menu</a>
		</div>

	</div>
</div>
</header>
<div class="clearfix"></div>
	<%= yield %>

<!-- Footer
================================================== -->
<div class="margin-top-15"></div>

<div id="footer">
	<!-- Main -->
	<!-- Bottom -->
	<div class="container">
		<div class="footer-bottom">
			<div class="sixteen columns">
				<h4>Follow Us</h4>
				<ul class="social-icons">
					<li><a class="facebook" href="#"><i class="icon-facebook"></i></a></li>
					<li><a class="twitter" href="#"><i class="icon-twitter"></i></a></li>
					<li><a class="gplus" href="#"><i class="icon-gplus"></i></a></li>
					<li><a class="linkedin" href="#"><i class="icon-linkedin"></i></a></li>
				</ul>
				<div class="copyrights">Â©  Copyright 2016 by <a href="#">Cloudy Fox</a>. All Rights Reserved.</div>
			</div>
		</div>
	</div>

</div>

<!-- Back To Top Button -->
<div id="backtotop"><a href="#"></a></div>

</div>
<!-- Wrapper / End -->


<!-- Scripts
================================================== -->
<% if @map %>
<%= javascript_include_tag 'contactmap', 'data-turbolinks-track': 'reload' %>
<% else %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<% end %>


<!-- Style Switcher
================================================== -->
<!-- <script src="scripts/switcher.js"></script> -->



</body>
</html>